    <!-- AOS JS + LÓGICA PANEL ADMIN -->
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // AOS
            AOS.init({
                once: true,
                duration: 600
            });

            // ================== PANEL ADMIN OFF-CANVAS ==================
            var toggle = document.querySelector('.admin-toggle-link'); // 3 rayitas
            var panel = document.getElementById('<%= adminSidePanel.ClientID %>');
            var backdrop = document.getElementById('adminSideBackdrop');
            var closeBtn = panel ? panel.querySelector('.admin-panel-close') : null;

            // Si no hay panel (usuario no admin), no hacemos nada
            if (!toggle || !panel || !backdrop) return;

            function openPanel(e) {
                if (e) e.preventDefault();

                panel.classList.add('is-open');
                backdrop.classList.add('show');
                backdrop.removeAttribute('hidden');
                document.body.classList.add('admin-panel-open');
                toggle.setAttribute('aria-expanded', 'true');

                var title = panel.querySelector('#adminPanelTitle');
                if (title) {
                    title.focus();
                } else {
                    panel.focus();
                }
            }

            function closePanel(e) {
                if (e) e.preventDefault();

                panel.classList.remove('is-open');
                backdrop.classList.remove('show');
                backdrop.setAttribute('hidden', 'hidden');
                document.body.classList.remove('admin-panel-open');
                toggle.setAttribute('aria-expanded', 'false');
            }

            // Abrir al hacer clic en los 3 puntitos
            toggle.addEventListener('click', openPanel);

            // Botón X
            if (closeBtn) {
                closeBtn.addEventListener('click', closePanel);
            }

            // Cerrar al hacer clic en el fondo
            backdrop.addEventListener('click', closePanel);

            // Cerrar con ESC
            document.addEventListener('keyup', function (e) {
                if (e.key === 'Escape') {
                    closePanel(e);
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
